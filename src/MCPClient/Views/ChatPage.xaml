<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MCPClient.Views.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MCPClient.Views"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Conversation List Sidebar -->
        <Grid Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Content="New Chat" 
                    Margin="12"
                    HorizontalAlignment="Stretch"
                    Click="NewChat_Click"/>
            
            <ListView x:Name="ConversationList" 
                      Grid.Row="1"
                      SelectionChanged="ConversationList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8,4">
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Delete" Icon="Delete" 
                                                    Click="DeleteConversation_Click"
                                                    Tag="{Binding}"/>
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <TextBlock Text="{Binding Title}" 
                                       TextTrimming="CharacterEllipsis"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Provider Selector -->
            <Grid Grid.Row="0" Padding="16,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Provider:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ProviderComboBox" 
                              MinWidth="200"
                              DisplayMemberPath="DisplayName"
                              SelectionChanged="ProviderComboBox_SelectionChanged"/>
                    <TextBlock Text="Model:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ModelComboBox"
                              MinWidth="250"
                              DisplayMemberPath="DisplayName"
                              SelectionChanged="ModelComboBox_SelectionChanged"/>
                    <ProgressRing x:Name="ModelLoadingRing" IsActive="False" Width="20" Height="20" Visibility="Collapsed"/>
                </StackPanel>
                <TextBlock x:Name="McpStatusText" Grid.Row="1" 
                           FontSize="11" Opacity="0.6" Margin="0,4,0,0"/>
            </Grid>

            <!-- Messages -->
            <ScrollViewer Grid.Row="1" x:Name="MessagesScrollViewer">
                <ListView x:Name="MessagesList" Padding="16" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4" 
                                    Padding="12,8"
                                    CornerRadius="8"
                                    MaxWidth="700"
                                    HorizontalAlignment="{Binding Role, Converter={StaticResource RoleToAlignmentConverter}}">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Role, Converter={StaticResource RoleToColorConverter}}"/>
                                </Border.Background>
                                <StackPanel>
                                    <TextBlock Text="{Binding Role}" 
                                               FontWeight="SemiBold" 
                                               FontSize="12"
                                               Opacity="0.7"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Content}" 
                                               TextWrapping="Wrap"
                                               Foreground="White"
                                               IsTextSelectionEnabled="True"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>

            <!-- Input Area -->
            <StackPanel Grid.Row="2">
                <InfoBar x:Name="ErrorInfoBar"
                         Severity="Error"
                         IsOpen="False"
                         IsClosable="True"/>
                <Grid Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="InputTextBox" 
                             PlaceholderText="Type your message..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxHeight="150"
                             KeyDown="InputTextBox_KeyDown"/>
                    
                    <Button x:Name="SendButton"
                            Grid.Column="1" 
                            Content="Send" 
                            Margin="8,0,0,0"
                            VerticalAlignment="Bottom"
                            Click="SendButton_Click"/>
                    
                    <ProgressRing x:Name="LoadingRing"
                                  Grid.Column="1"
                                  Visibility="Collapsed"
                                  IsActive="False"
                                  Width="24" Height="24"
                                  Margin="8,0,0,0"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
